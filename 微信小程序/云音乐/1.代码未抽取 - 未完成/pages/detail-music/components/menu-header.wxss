.menuHeader {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 450rpx;
  color: #fff;
}

/* 背景 */
.menuHeader .view__bgImage .bg-image {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.menuHeader .view__bgImage .view__bgfilter {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
}

/* 内容 */
.menuHeader .view__content {
  display: flex;
  margin-top: 60rpx;
  padding: 0 50rpx;
}
.menuHeader .view__content .image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
}
.menuHeader .view__content .info {
  position: relative;
  height: 220rpx;
  flex: 1;
  margin-left: 50rpx;
}
.menuHeader .view__content .info .anthor {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}
.menuHeader .view__content .info .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}
.menuHeader .view__content .info .desc {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  margin-top: 30rpx;
  font-size: 24rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.menuHeader .view__content .info .nickname {
  font-size: 24rpx;
  margin-left: 18rpx;
}

/* 底部 */
.menuHeader .view__tooltip {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  margin-top: 30rpx;
}
.menuHeader .view__tooltip .item {
  display: flex;
  align-items: center;
}
.menuHeader .view__tooltip .item .icon {
  width: 48rpx;
  margin-right: 10rpx;
}
.menuHeader .view__tooltip .item .text {
  font-size: 28rpx;
}
