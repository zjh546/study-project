.musicPlay .image__bgimg {
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.musicPlay .view__bgFilter {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(20px);
}

/* bar */
.musicPlay .bar {
  display: flex;
  font-size: 28rpx;
  color: rgba(241, 242, 246, 0.7);
}
.musicPlay .bar .center {
  margin: 0 30rpx;
}
.musicPlay .bar .active {
  color: #fff;
  font-weight: bold;
}
